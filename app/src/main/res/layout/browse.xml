<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262525">

    <Button
        android:id="@+id/btn1"
        android:layout_width="332dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/breakfast"
        android:paddingBottom="0dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="332dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn1"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/brunch" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="332dp"
        android:layout_height="82dp"
        android:layout_alignStart="@+id/btn2"
        android:layout_below="@+id/btn2"
        android:layout_marginBottom="5dp"
        android:background="@drawable/lunch" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="332dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn3"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/dinner" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="332dp"
        android:layout_height="82dp"
        android:layout_alignStart="@+id/btn1"
        android:layout_below="@+id/btn4"
        android:layout_marginBottom="5dp"
        android:background="@drawable/snacks" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="332dp"
        android:layout_height="82dp"
        android:layout_alignStart="@+id/btn1"
        android:layout_below="@+id/btn5"
        android:background="@drawable/desserts" />
</RelativeLayout>